<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/color_palette_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="gone"

        android:text="@string/color_palette"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/color_palette_spinner"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/color_palette_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginVertical="8dp"
        android:spinnerMode="dropdown"

        app:layout_constraintBottom_toTopOf="@id/colorListRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/color_palette_title"
        app:layout_constraintStart_toStartOf="parent" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/colorListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/color_palette_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:spanCount="5"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center_horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:itemCount="12"
        tools:listitem="@layout/adapter_color_square"/>

</androidx.constraintlayout.widget.ConstraintLayout>