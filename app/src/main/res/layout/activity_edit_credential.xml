<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.izzdarki.wallet.ui.credentials.EditCredentialActivity">

    <include layout="@layout/toolbar"/>

    <!-- layout_behaviour makes app bar change color when scrolling -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginEnd="@dimen/default_padding">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/credential_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"

                        android:hint="@string/entry_name"
                        app:endIconMode="none"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/credential_name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/barcode_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/text_input_padding_bottom"

                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"

                        android:hint="@string/barcode"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/icon_qr_code_scan_24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/barcode_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/barcode_details_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/text_input_padding_bottom"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/text_input_padding_bottom"

                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"

                            android:hint="@string/barcode_type">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/barcode_type_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:imeOptions="actionNext"
                                android:maxLines="1"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"

                            android:hint="@string/barcode_show_text">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/barcode_show_text_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:imeOptions="actionNext"
                                android:maxLines="1"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="2"
                        tools:listitem="@layout/adapter_edit_field"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_new_property_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/icon_plus_24dp"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:text="@string/field" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_divider_padding"
                        android:layout_marginBottom="@dimen/vertical_divider_padding"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/credential_labels_chip_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/credential_labels_add_chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/icon_plus_24dp"
                            app:chipIconVisible="true"
                            android:text="@string/label"
                            style="@style/Widget.Material3.Chip.Assist" />

                    </com.google.android.material.chip.ChipGroup>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_divider_padding"
                        android:layout_marginBottom="@dimen/vertical_divider_padding"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/credential_color_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_color_button_text"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/front_image_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/front_image"
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            app:icon="@drawable/icon_image_24dp"
                            android:layout_marginEnd="@dimen/default_padding"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/back_image_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/back_image"
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            app:icon="@drawable/icon_image_24dp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- Space for keyboard, otherwise it covers stuff that can be edited -->
                    <View
                        android:id="@+id/space_for_keyboard"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:visibility="gone"/>

                    <!-- extra space -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:visibility="invisible"/>

                    <!-- card (space) is displayed at the bottom, programmatically -->

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.core.widget.NestedScrollView>

            <!-- animated card view is in here -->
            <FrameLayout
                android:id="@+id/card_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_marginEnd="@dimen/default_padding"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>